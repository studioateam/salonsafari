<div class="row">
	<div class="col-lg-12">
		<h1 class="page-header">
			Вход
		</h1>
		<ol class="breadcrumb">
                    <li><a href="<%= index_path %>"><strong>Главная</strong></a>
                    </li>
                    <li class="active">Вход</li>
                </ol>
	</div>
</div>
<!-- /.row -->

<div class="panel panel-default">
	<!-- Default panel contents -->
	<div class="panel-heading">Введите логин и пароль, выданный Вам администратором</div>
	<div class="panel-body">
		<% if flash[:alert] %>
				<p><%= flash[:alert] %></p>
			<% end %>
			<%= form_tag login_path, :id => 'form-horizontal' do %>
				<div class="form-group">
				    <label class="col-sm-2 control-label">Имя</label>
				    <div class="col-sm-10">
				      <%= text_field_tag :name, params[:name], :class => 'form-control'%>
				    </div>
				  </div>
				  <div class="form-group">
				    <label class="col-sm-2 control-label" style="margin-top: 10px;">Пароль</label>
				    <div class="col-sm-10" style="margin-top: 10px;">
				      <%= password_field_tag :password, params[:password], :class => 'form-control'%>
				    </div>
				  </div>
				  <div class="form-group">
				    <div class="col-sm-offset-2 col-sm-10" style="margin-top: 10px;">
				      <%= submit_tag "Войти", :class => 'btn btn-warning'%>
				    </div>
				  </div>
			<% end %>
	</div>
</div>
