<% if session[:user_id] %>
	<section id="content">
	  <div class="container" style="background: url(<%= image_url 'box40.png' %>)">
	    <div class="row" style="margin-left: 20px; margin-bottom: 20px;">
		<h3 style="font-size: 2em;" align="center">Акции</h3>
		<table>
		  <thead>
		    <tr>
		      <th>Заголовок</th>
		      <th>Описание</th>
		      <th></th>
		      <th></th>
		    </tr>
		  </thead>

		  <tbody>
		    <% @sales.each do |sale| %>
		      <tr>
			<td><%= sale.title %></td>
			<td><%= sale.description %></td>
			<td><%= link_to 'Изменить', edit_sale_path(sale) %></td>
			<td><%= link_to 'Удалить', sale, method: :delete, data: { confirm: 'Вы уверены, что хотите удалить эту запись?' } %></td>
		      </tr>
		    <% end %>
		  </tbody>
		</table>

		<br>

		<a href="<%= new_sale_path %>" class="btn">Добавить акцию</a>
	    </div>
	  </div>
	</section>
<% end %>
