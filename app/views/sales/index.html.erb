<div class="row">
	<div class="col-lg-12">
		<h1 class="page-header">
			Акции
		</h1>
		<ol class="breadcrumb">
                    <li><a href="<%= index_path %>"><strong>Главная</strong></a>
                    </li>
                    <li class="active">Акции</li>
                </ol>
	</div>
</div>
<!-- /.row -->

<% if session[:user_id] %>
<div class="panel panel-default">
	<!-- Default panel contents -->
	<div class="panel-heading">Текущие акции</div>
	<div class="panel-body">
		
			<a href="<%= new_sale_path %>" class="btn btn-warning">Добавить акцию</a>
	</div>
		<table class="table table-hover">
		  <% @sales.each do |sale| %>
		      <tr>
			<td><%= sale.title %></td>
			<td><%= sale.description %></td>
			<td><%= link_to 'Изменить', edit_sale_path(sale) %></td>
			<td><%= link_to 'Удалить', sale, method: :delete, data: { confirm: 'Вы уверены, что хотите удалить эту запись?' } %></td>
		      </tr>
		    <% end %>
		</table>
</div>
<% else %>
	<% @sales.each do |sale| %>
			<div class="panel panel-warning">
			  <div class="panel-heading">
			    <h3 class="panel-title"><%= sale.title %></h3>
			  </div>
			  <div class="panel-body">
			   	<%= sale.description %>
			  </div>
			</div>
	<% end %>
<% end %>
<% if @sales.count == 0 %>
			<div class="alert alert-warning" role="alert">
				Акций нет! Но вы можете уточнить наличие специальных предложений по телефону - 8 937 714 65 56
			</div>
<% end %>
