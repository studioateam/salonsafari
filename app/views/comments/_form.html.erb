<%= form_for @comment, :html => { :id => "form-horizontal"} do |f| %>
  <% if @comment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@comment.errors.count, "error") %> prohibited this comment from being saved:</h2>

      <ul>
      <% @comment.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <% @comment.message_date = @time %>

  <div class="form-group">
    <label class="col-sm-2 control-label">Имя</label>
    <div class="col-sm-10">
      <%= f.text_field :name, :class => 'form-control'%>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label" style="margin-top: 10px;">Email</label>
    <div class="col-sm-10" style="margin-top: 10px;">
      <%= f.text_field :email, :class => 'form-control'%>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label" style="margin-top: 10px;">Сообщение</label>
    <div class="col-sm-10" style="margin-top: 10px;">
      <%= f.text_area :message, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label" style="margin-top: 10px;">Дата</label>
    <div class="col-sm-10" style="margin-top: 10px;">
      <%= f.datetime_select :message_date, {:disabled => true} %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10" style="margin-top: 10px;">
      <%= f.submit 'Отправить', :class => 'btn btn-warning'%>
    </div>
  </div>
<% end %>
