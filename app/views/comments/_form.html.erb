<%= form_for @comment, :html => { :id => "contact-form"} do |f| %>
  <% if @comment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@comment.errors.count, "error") %> prohibited this comment from being saved:</h2>

      <ul>
      <% @comment.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <% @comment.message_date = @time %>

  <div class="field" style="margin-left: 20%;">
    <%= f.label :'Имя' %><br>
    <%= f.text_field :name%>
  </div>
  <div class="field"  style="margin-left: 20%;">
    <%= f.label :Email %><br>
    <%= f.text_field :email %>
  </div>
  <div class="field"  style="margin-left: 20%;">
    <%= f.label :'Сообщение' %><br>
    <%= f.text_area :message %>
  </div>
  <div class="field"  style="margin-left: 20%;">
    <%= f.label :'Дата' %><br>
    <%= f.datetime_select :message_date, {:disabled => true} %>
  </div>
  <div class="actions">
    <%= f.submit 'Отправить', :class => 'btn'%>
  </div>
<% end %>
