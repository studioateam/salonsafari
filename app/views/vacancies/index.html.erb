<div class="row">
	<div class="col-lg-12">
		<h1 class="page-header">
			Вакансии
		</h1>
		<ol class="breadcrumb">
                    <li><a href="<%= index_path %>"><strong>Главная</strong></a>
                    </li>
                    <li class="active">Вакансии</li>
                </ol>
	</div>
</div>
<!-- /.row -->

<% if session[:user_id] %>
<div class="panel panel-default">
	<!-- Default panel contents -->
	<div class="panel-heading">Доступные вакансии</div>
	<div class="panel-body">
			<a href="<%= new_vacancy_path %>" class="btn btn-warning">Добавить вакансию</a>
	</div>
		<table class="table table-hover">
		  <% @vacancies.each do |vacancy| %>
		      <tr>
			<td><%= vacancy.title %></td>
			<td><%= vacancy.description %></td>
			<td><%= link_to 'Изменить', edit_vacancy_path(vacancy) %></td>
			<td><%= link_to 'Удалить', vacancy, method: :delete, data: { confirm: 'Вы уверены, что хотите удалить эту запись?' } %></td>
		      </tr>
		    <% end %>
		</table>
</div>
<% else %>
	<% @vacancies.each do |vacancy| %>
			<div class="alert alert-warning" role="alert">
				<strong><%= vacancy.title %></strong>
				<br>
				<%= vacancy.description %>			
			</div>
	<% end %>
<% end %>
<% if @vacancies.count == 0 %>
			<div class="alert alert-warning" role="alert">
				К сожалению, новых вакансий нет. Но вы можете позвонить нам по телефону и узнать подробнее,
				быть может именно Вы нас заинтересуете ;)
			</div>
<% end %>
