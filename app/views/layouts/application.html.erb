	function SelectedHaircut(a) {
		var label = a.value;
		if (label==0) {
			document.getElementById("manMasters").style.display='';
			document.getElementById("womanMasters").style.display='none';
			document.getElementById("manDirector").style.display='none';
			document.getElementById("womanDirector").style.display='none'; 
		} else if (label==1) {
			document.getElementById("manMasters").style.display='none';
			document.getElementById("womanMasters").style.display='';
			document.getElementById("manDirector").style.display='none';
			document.getElementById("womanDirector").style.display='none';
		} else if (label==2) {
			document.getElementById("manMasters").style.display='none';
			document.getElementById("womanMasters").style.display='none';
			document.getElementById("manDirector").style.display='';
			document.getElementById("womanDirector").style.display='none';
		} else if (label==3) {
			document.getElementById("manMasters").style.display='none';
			document.getElementById("womanMasters").style.display='none';
			document.getElementById("manDirector").style.display='none';
			document.getElementById("womanDirector").style.display='';
		} else if (label==-1) {
			document.getElementById("manMasters").style.display='none';
			document.getElementById("womanMasters").style.display='none';
			document.getElementById("manDirector").style.display='none';
			document.getElementById("womanDirector").style.display='none';
		}
	}

	function SelectedHaircoloring(a) {
		var label = a.value;
		if (label==0) {
			document.getElementById("mastersHaircoloring").style.display='';
			document.getElementById("directorHaircoloring").style.display='none';
		} else if (label==1) {
			document.getElementById("mastersHaircoloring").style.display='none';
			document.getElementById("directorHaircoloring").style.display='';
		}
	}
</script>
