<div class="row">
	<div class="col-lg-12">
		<h1 class="page-header">
			Добавление фотографий к папке
		</h1>
		<ol class="breadcrumb">
                    <li><a href="<%= index_path %>"><strong>Главная</strong></a>
                    </li>
		    <li><a href="<%= photos_path %>"><strong>Фотогалерея</strong></a>
                    </li>
                    <li class="active">Добавление фотографий...</li>
                </ol>
	</div>
</div>
<!-- /.row -->

<div class="panel panel-default">
	<!-- Default panel contents -->
	<div class="panel-heading">Добавление фото к папке  <%= @records %>:</div>
	<div class="panel-body">
		<%= form_for(@photo, :url => add_photo_to_folder_post_path, html: { multipart: true, :id => "contact-form" }) do |f| %>
			  <div class="form-group">
			    <label class="col-sm-2 control-label" style="margin-top: 10px;">Изображение (можно выбрать несколько)</label>
			    <div class="col-sm-10" style="margin-top: 10px;">
			      <%= file_field_tag 'files[]', :multiple => true %>
			    </div>
			  </div>
			  <div class="form-group">
			    <div class="col-sm-offset-2 col-sm-10" style="margin-top: 10px;">
			      <%= f.submit 'Отправить', :class => 'btn btn-warning'%>
			    </div>
			  </div>
		<% end %>
	</div>
</div>
